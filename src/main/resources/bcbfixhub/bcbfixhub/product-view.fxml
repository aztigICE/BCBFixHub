<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<!--
  EDITED:
  - Changed root to BorderPane for better layout.
  - Linked product.css stylesheet.
  - Added styleClass="product-root".
  - Placed TabPane in <center> and Back button in <top>.
  - Added styleClasses to all Buttons, TextFields, and TableViews.
  - Wrapped bottom controls in an HBox with styleClass="action-bar".
  - EDITED: Changed prefHeight/prefWidth to new 900x600 standard.
-->
<BorderPane prefHeight="600.0" prefWidth="900.0" styleClass="product-root"
            stylesheets="@css/product.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bcbfixhub.bcbfixhub.controllers.ProductController">

    <top>
        <HBox styleClass="back-button-bar">
            <Button onAction="#backAdmin" text="Back to Admin" styleClass="back-button" />
        </HBox>
    </top>

    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Keyboard">
                    <content>
                        <!-- Replaced AnchorPane with BorderPane for simple top/bottom layout -->
                        <BorderPane>
                            <center>
                                <TableView fx:id="tableView">
                                    <columns>
                                        <TableColumn fx:id="stockColumn" prefWidth="135.0" text="Stock" />
                                        <TableColumn fx:id="brandColumn" prefWidth="145.0" text="Product Brand" />
                                        <TableColumn fx:id="modelColumn" prefWidth="230.0" text="Product Model" />
                                        <TableColumn fx:id="priceColumn" prefWidth="90.0" text="Price(PHP)" />
                                    </columns>
                                    <BorderPane.margin>
                                        <Insets />
                                    </BorderPane.margin>
                                    <!-- Ensure TableView stretches -->
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </center>
                            <bottom>
                                <HBox styleClass="action-bar">
                                    <TextField fx:id="stockField" prefWidth="60.0" promptText="Stock" />
                                    <TextField fx:id="brandField" prefWidth="100.0" promptText="Brand" />
                                    <TextField fx:id="modelField" prefWidth="150.0" promptText="Model" />
                                    <TextField fx:id="priceField" prefWidth="80.0" promptText="Price" />
                                    <!-- Spacer -->
                                    <HBox HBox.hgrow="ALWAYS" />
                                    <Button onAction="#handleAddProduct" text="Add" styleClass="admin-button" />
                                    <Button onAction="#handleEditProduct" text="Edit" styleClass="edit-button" />
                                    <Button onAction="#handleDeleteProduct" text="Delete" styleClass="delete-button" />
                                </HBox>
                            </bottom>
                        </BorderPane>
                    </content>
                </Tab>
                <Tab text="Mouse">
                    <content>
                        <BorderPane>
                            <center>
                                <TableView fx:id="tableView1">
                                    <columns>
                                        <TableColumn fx:id="stockColumn1" prefWidth="135.0" text="Stock" />
                                        <TableColumn fx:id="brandColumn1" prefWidth="145.0" text="Product Brand" />
                                        <TableColumn fx:id="modelColumn1" prefWidth="230.0" text="Product Model" />
                                        <TableColumn fx:id="priceColumn1" prefWidth="90.0" text="Price(PHP)" />
