                                    <TextField fx:id="brandField1" prefWidth="100.0" promptText="Brand" />
                                    <TextField fx:id="modelField1" prefWidth="150.0" promptText="Model" />
                                    <TextField fx:id="priceField1" prefWidth="80.0" promptText="Price" />
                                    <HBox HBox.hgrow="ALWAYS" />
                                    <Button onAction="#handleAddProduct" text="Add" styleClass="admin-button" />
                                    <Button onAction="#handleEditProduct" text="Edit" styleClass="edit-button" />
                                    <Button onAction="#handleDeleteProduct" text="Delete" styleClass="delete-button" />
                                </HBox>
                            </bottom>
                        </BorderPane>
                    </content>
                </Tab>
                <Tab text="Storage">
