                                    <TextField fx:id="stockField2111" prefWidth="60.0" promptText="Stock" />
                                    <TextField fx:id="brandField2111" prefWidth="100.0" promptText="Brand" />
                                    <TextField fx:id="modelField2111" prefWidth="150.0" promptText="Model" />
                                    <TextField fx:id="priceField2111" prefWidth="80.0" promptText="Price" />
                                    <HBox HBox.hgrow="ALWAYS" />
                                    <Button onAction="#handleAddProduct" text="Add" styleClass="admin-button" />
                                    <Button onAction="#handleEditProduct" text="Edit" styleClass="edit-button" />
                                    <Button onAction="#handleDeleteProduct" text="Delete" styleClass="delete-button" />
                                </HBox>
                            </bottom>
                        </BorderPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>