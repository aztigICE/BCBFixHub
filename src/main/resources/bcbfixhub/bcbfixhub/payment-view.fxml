<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!--
  Root HBox, linked to payment.css.
  All inline styles have been removed.
-->
<HBox prefHeight="650.0" prefWidth="950.0" spacing="30.0" styleClass="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bcbfixhub.bcbfixhub.controllers.PaymentController">
    <padding>
        <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
    </padding>
    <children>
        <!-- LEFT COLUMN (Payment) -->
        <VBox prefWidth="420.0" spacing="15.0">
            <children>
                <Label text="Payment Method" styleClass="title-label">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>

                <!-- Payment Toggles -->
                <VBox prefWidth="100.0" spacing="10.0" styleClass="toggle-box">
                    <children>
                        <ToggleButton fx:id="gcashToggle" mnemonicParsing="false"
                                      text="GCash" styleClass="payment-toggle-button" prefWidth="400.0"/>
                        <Separator/>
                        <ToggleButton fx:id="paypalToggle" mnemonicParsing="false"
                                      text="PayPal" styleClass="payment-toggle-button" prefWidth="400.0"/>
                        <Separator/>
                        <ToggleButton fx:id="creditDebitToggle" mnemonicParsing="false"
                                      text="Credit/Debit" styleClass="payment-toggle-button" prefWidth="400.0"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" top="10.0"/>
                    </padding>
                </VBox>

                <!-- StackPane for Payment Forms -->
                <StackPane prefHeight="180.0" prefWidth="300.0">
                    <VBox fx:id="gcashBox" spacing="10.0" visible="false">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <Label text="GCash Details" styleClass="details-title"/>
                        <Label text="GCash Number:" styleClass="details-label"/>
                        <TextField fx:id="gcashNumberField" promptText="e.g., 09123456789"/>
                        <Label text="GCash Name:" styleClass="details-label"/>
                        <TextField fx:id="gcashNameField" promptText="e.g., Juan Dela Cruz"/>
                    </VBox>

                    <VBox fx:id="paypalBox" spacing="10.0" visible="false">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <Label text="Paypal Details" styleClass="details-title"/>
                        <Label text="Paypal Email:" styleClass="details-label"/>
                        <TextField fx:id="paypalEmailField" promptText="e.g., juan@example.com"/>
                    </VBox>

                    <VBox fx:id="creditDebitBox" spacing="10.0" visible="false">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <Label text="Credit/Debit Card Details" styleClass="details-title"/>
                        <Label text="Card Number:" styleClass="details-label"/>
                        <TextField fx:id="cardNumberField" promptText="---- ---- ---- ----"/>
                        <HBox spacing="10.0">
                            <VBox>
                                <Label text="Expiry Date:" styleClass="details-label"/>
                                <TextField fx:id="expiryDateField" promptText="MM/YY" prefWidth="70.0"/>
                            </VBox>
                            <VBox>
                                <Label text="CVV:" styleClass="details-label"/>
                                <TextField fx:id="cvvField" promptText="123" prefWidth="50.0"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </StackPane>

                <!-- Spacer -->
                <VBox VBox.vgrow="ALWAYS"/>

                <!-- Checkout Button -->
                <Button fx:id="checkoutButton" mnemonicParsing="false" text="CHECKOUT" prefHeight="50.0"
                        prefWidth="420.0"/>
            </children>
        </VBox>


        <!-- RIGHT COLUMN (Placeholders) -->
        <VBox prefWidth="415.0" spacing="20.0">
            <!-- Placeholder: Order Summary with new dark background -->
            <VBox spacing="10.0" styleClass="summary-box" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                <Label text="Designer Package" styleClass="summary-title">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <Label text="Package for Designer include Photoshop and Illustrator" styleClass="summary-subtitle" />
                <Separator />

                <!-- Placeholder: Item List -->
                <GridPane hgap="10.0" vgap="10.0">
                    <Label text="PRODUCT" styleClass="grid-header" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label text="PRICE" styleClass="grid-header" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label text="Adobe Photoshop" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label text="\$11" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Adobe Illustrator" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <Label text="\$20" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                </GridPane>
                <Separator />

                <!-- Placeholder: Totals -->
                <GridPane hgap="10.0" vgap="5.0">
                    <Label text="SUBTOTAL" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label text="\$31" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label text="TAX" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label text="\$14" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="PROCESSING FEE" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <Label text="\$5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                </GridPane>
                <Separator />

                <!-- Placeholder: Grand Total -->
                <GridPane hgap="10.0">
                    <Label text="TOTAL" styleClass="grid-total" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label text="\$50" styleClass="grid-total" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                </GridPane>
            </VBox>
        </VBox>
    </children>
</HBox>