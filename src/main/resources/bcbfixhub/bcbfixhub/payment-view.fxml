<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bcbfixhub.bcbfixhub.controllers.PaymentController"
      spacing="30.0" prefWidth="950.0" prefHeight="650.0">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- LEFT COLUMN: Payment Methods -->
    <VBox spacing="15.0" prefWidth="420.0">
        <children>
            <Label text="Payment Method" styleClass="title-label">
                <font><Font name="System Bold" size="20"/></font>
            </Label>

            <VBox spacing="10.0" styleClass="toggle-box">
                <children>
                    <ToggleButton fx:id="gcashToggle" text="GCash" prefWidth="400.0"/>
                    <Separator/>
                    <ToggleButton fx:id="paypalToggle" text="PayPal" prefWidth="400.0"/>
                    <Separator/>
                    <ToggleButton fx:id="creditDebitToggle" text="Credit/Debit" prefWidth="400.0"/>
                </children>
                <padding>
                    <Insets top="10" bottom="10"/>
                </padding>
            </VBox>

            <StackPane prefHeight="220.0">
                <children>
                    <!-- GCash -->
                    <VBox fx:id="gcashBox" spacing="10.0" visible="false">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                        <Label text="GCash Details" styleClass="details-title"/>
                        <Label text="GCash Number:" styleClass="details-label"/>
                        <TextField fx:id="gcashNumberField" promptText="e.g., 09123456789"/>
                        <Label text="GCash Name:" styleClass="details-label"/>
                        <TextField fx:id="gcashNameField" promptText="e.g., Juan Dela Cruz"/>
                    </VBox>

                    <!-- PayPal -->
                    <VBox fx:id="paypalBox" spacing="10.0" visible="false">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                        <Label text="PayPal Details" styleClass="details-title"/>
                        <Label text="PayPal Email:" styleClass="details-label"/>
                        <TextField fx:id="paypalEmailField" promptText="e.g., juan@example.com"/>
                    </VBox>

                    <!-- Credit/Debit -->
                    <VBox fx:id="creditDebitBox" spacing="10.0" visible="false">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                        <Label text="Credit/Debit Card Details" styleClass="details-title"/>
                        <Label text="Card Number:" styleClass="details-label"/>
                        <TextField fx:id="cardNumberField" promptText="---- ---- ---- ----"/>
                        <HBox spacing="10.0">
                            <VBox>
                                <Label text="Expiry Date:" styleClass="details-label"/>
                                <TextField fx:id="expiryDateField" promptText="MM/YY" prefWidth="70.0"/>
                            </VBox>
                            <VBox>
                                <Label text="CVV:" styleClass="details-label"/>
                                <TextField fx:id="cvvField" promptText="123" prefWidth="50.0"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </children>
            </StackPane>

            <VBox VBox.vgrow="ALWAYS"/>
            <Button fx:id="checkoutButton" text="CHECKOUT" prefWidth="420.0" prefHeight="50.0"/>
        </children>
    </VBox>

    <!-- RIGHT COLUMN: Cart Items and Summary -->
    <VBox spacing="20.0" prefWidth="415.0">
        <children>
            <Label text="Order Summary" styleClass="summary-title"/>
            <ScrollPane fitToWidth="true" prefHeight="400.0">
                <content>
                    <VBox fx:id="cartItemsContainer" spacing="10.0"/>
                </content>
            </ScrollPane>

            <Separator/>

            <GridPane hgap="10.0" vgap="5.0">
                <children>
                    <Label text="SUBTOTAL" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label fx:id="subtotalLabel" text="PHP0.00" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="TAX" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label fx:id="taxLabel" text="PHP0.00" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="TOTAL" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label fx:id="totalLabel" text="PHP0.00" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </children>
            </GridPane>
        </children>
    </VBox>
</HBox>
