<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- MODIFIED: Changed dimensions to match store page -->
<BorderPane prefHeight="700.0" prefWidth="1000.0" styleClass="root" stylesheets="@css/account.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bcbfixhub.bcbfixhub.controllers.AccountController">
    <top>
        <!-- This nav bar is unchanged -->
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="nav-bar">
                <padding>
                    <Insets top="10.0" right="30.0" bottom="10.0" left="30.0" />
                </padding>
                <children>
                    <Label styleClass="store-title" text="BCB Fix Hub" />
                    <HBox HBox.hgrow="ALWAYS" /> <!-- Spacer -->
                    <Button fx:id="storeButton" mnemonicParsing="false" onAction="#handleGoToStore" styleClass="nav-button" text="Store" />
                    <Button mnemonicParsing="false" styleClass="nav-button-selected" text="My Account" />
                    <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
                </children>
            </HBox>
        </VBox>
    </top>
    <center>
        <!-- MODIFIED: Replaced VBox with HBox for 2-panel layout -->
        <HBox spacing="20.0">
            <padding>
                <Insets top="20.0" right="30.0" bottom="20.0" left="30.0" />
            </padding>
            <children>
                <!-- LEFT PANEL: Order History -->
                <VBox spacing="20.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="section-title" text="Order History" />
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="ordersContainer" spacing="15.0">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                    <!-- Placeholder orders will be added here -->
                                </VBox>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>

                <!-- RIGHT PANEL: Current Cart -->
                <VBox prefWidth="350.0" spacing="10.0" styleClass="cart-summary-panel">
                    <children>
                        <Label styleClass="section-title" text="Current Cart" />
                        <Label fx:id="emptyCartLabel" text="Your cart is empty." />
                        <ScrollPane fx:id="cartScrollPane" fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="cartItemsContainer" spacing="10.0" />
                            </content>
                        </ScrollPane>
                        <Button fx:id="checkoutButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleGoToCheckout" styleClass="account-checkout-button" text="Go to Checkout" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>