<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Root BorderPane for the Cart view. Uses cart.css -->
<BorderPane prefHeight="600.0" prefWidth="900.0" styleClass="root" stylesheets="@css/cart.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bcbfixhub.bcbfixhub.controllers.CartController">
    <top>
        <!-- Top bar with Back button and Title -->
        <HBox alignment="CENTER_LEFT" styleClass="header-bar">
            <padding>
                <Insets top="15.0" right="30.0" bottom="15.0" left="30.0" />
            </padding>
            <children>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleGoBack" styleClass="back-button" text="&lt; Back to Store" />
                <HBox HBox.hgrow="ALWAYS" />
                <Label styleClass="cart-title" text="Your Shopping Cart" />
                <HBox HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>
    <center>
        <!-- Main content area -->
        <HBox spacing="20.0">
            <padding>
                <Insets top="20.0" right="30.0" bottom="20.0" left="30.0" />
            </padding>
            <children>
                <!-- Scrollable list of cart items -->
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane" HBox.hgrow="ALWAYS">
                    <content>
                        <VBox fx:id="cartItemsContainer" spacing="10.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <!-- Placeholder Label -->
                            <Label text="Your cart is empty." fx:id="emptyCartLabel" />
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- Order Summary Panel -->
                <VBox styleClass="summary-pane" prefWidth="280.0" spacing="15.0">
                    <padding>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                    </padding>
                    <children>
                        <Label styleClass="summary-title" text="Order Summary" />
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Subtotal:" />
                                <HBox HBox.hgrow="ALWAYS" />
                                <Label fx:id="subtotalLabel" styleClass="summary-value" text="\$0.00" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Tax (8%):" />
                                <HBox HBox.hgrow="ALWAYS" />
                                <Label fx:id="taxLabel" styleClass="summary-value" text="\$0.00" />
                            </children>
                        </HBox>
                        <VBox styleClass="separator" prefHeight="2.0"/>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label styleClass="summary-total-label" text="Total:" />
                                <HBox HBox.hgrow="ALWAYS" />
                                <Label fx:id="totalLabel" styleClass="summary-total-value" text="\$0.00" />
                            </children>
                        </HBox>
                        <Button fx:id="checkoutButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleCheckout" styleClass="checkout-button" text="Proceed to Checkout" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>