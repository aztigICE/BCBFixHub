<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--
  Root VBox, applies the auth-root style and links the register.css stylesheet.
-->
<VBox fx:id="register"
      alignment="CENTER"
      prefHeight="600.0" prefWidth="500.0"
      spacing="15.0" styleClass="auth-root"
      stylesheets="@css/register.css"
      xmlns="http://javafx.com/javafx/21.0.6"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bcbfixhub.bcbfixhub.controllers.RegisterController">

    <padding>
        <!-- Padding is handled by .auth-root in CSS, but this is a fallback -->
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <!-- Title Label -->
    <Label styleClass="auth-title" text="Create Account" />

    <!-- Input Fields -->
    <TextField fx:id="usernameField" promptText="Username"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
    <TextField fx:id="phoneField" promptText="Phone Number (Optional)"/>

    <!-- Button Bar -->
    <HBox styleClass="button-bar">
        <children>
            <!--
              EDITED: Changed onAction to #onHome and text to "Home"
              This button now uses the auth-secondary-button style.
            -->
            <Button onAction="#onHome" styleClass="auth-secondary-button" text="Home" />
            <!--
              EDITED: This button now uses the auth-primary-button style.
            -->
            <Button  fx:id="registerButton" onAction="#onRegister" styleClass="auth-primary-button" text="Register" />
        </children>
        <VBox.margin>
            <Insets top="10.0" /> <!-- Added margin above buttons -->
        </VBox.margin>
    </HBox>

</VBox>