<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<!--
  EDITED:
  - Linked admin.css stylesheet.
  - Added styleClass="admin-root" to root VBox.
  - Changed fx:id to "adminRoot".
  - Added a title Label.
  - Added styleClasses to all Buttons.
-->
<VBox fx:id="adminRoot"
      alignment="CENTER"
      spacing="20.0"
      styleClass="admin-root"
      stylesheets="@css/admin.css"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bcbfixhub.bcbfixhub.controllers.AdminController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="admin-title" text="Admin Panel" />

    <VBox alignment="CENTER" spacing="25"> <!-- Reduced spacing a bit -->
        <Button onAction="#onProducts" text="Products" styleClass="admin-button" />
        <Button onAction="#onOrder" text="Orders" styleClass="admin-button" />
        <Button onAction="#onUser" text="Users" styleClass="admin-button" />
        <Button onAction="#onLogOut" text="Log Out" styleClass="admin-logout-button">
            <VBox.margin>
                <Insets top="20.0" /> <!-- Added margin above logout -->
            </VBox.margin>
        </Button>
    </VBox>

</VBox>