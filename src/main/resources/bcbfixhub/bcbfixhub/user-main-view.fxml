<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" styleClass="root" stylesheets="@css/main.css"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bcbfixhub.bcbfixhub.controllers.MainController">

    <top>
        <VBox>

            <!-- Top navigation bar -->
            <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="nav-bar">
                <padding>
                    <Insets top="10.0" right="30.0" bottom="10.0" left="30.0"/>
                </padding>
                <children>
                    <Label styleClass="store-title" text="BCB Fix Hub"/>
                    <HBox HBox.hgrow="ALWAYS"/> <!-- Spacer -->
                    <Button mnemonicParsing="false" styleClass="nav-button-selected" text="Store"/>
                    <Button fx:id="accountButton" mnemonicParsing="false" styleClass="nav-button" text="My Account" onAction="#handleGoToAccount"/>
                </children>
            </HBox>

            <!-- Filter/Search bar -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="filter-bar">
                <padding>
                    <Insets top="15.0" right="30.0" bottom="15.0" left="30.0"/>
                </padding>
                <children>
                    <Label styleClass="filter-bar-title" text="Store Catalog"/>
                    <VBox HBox.hgrow="ALWAYS"/> <!-- Spacer -->
                    <Label text="Category:"/>
                    <ChoiceBox fx:id="categoryChoiceBox" prefWidth="150.0"/>
                    <TextField fx:id="searchBar" promptText="Search products..." prefWidth="250.0"/>
                    <Button fx:id="cartButton"
                            mnemonicParsing="false"
                            text="Cart (0)"
                            styleClass="cart-button"
                            onAction="#handleGoToCart"/>

                </children>
            </HBox>

        </VBox>
    </top>

    <center>
        <!-- Scrollable product area -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane">
            <content>
                <TilePane fx:id="catalogTilePane" hgap="20.0" vgap="20.0">
                    <padding>
                        <Insets top="20.0" right="30.0" bottom="20.0" left="30.0"/>
                    </padding>
                </TilePane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
