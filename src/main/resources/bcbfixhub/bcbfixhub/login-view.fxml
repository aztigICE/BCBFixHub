<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--
  Root VBox, applies the auth-root style and links the login.css stylesheet.
  EDITED: Removed fx:id="test" as it is not injected in the controller.
-->
<VBox alignment="CENTER" prefHeight="550.0" prefWidth="450.0"
      spacing="15.0" styleClass="auth-root"
      stylesheets="@css/login.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bcbfixhub.bcbfixhub.controllers.LoginController">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <!-- Title Label -->
    <Label styleClass="auth-title" text="BCB Fix Hub Login" />

    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />

    <HBox styleClass="button-bar">
        <children>
            <Button onAction="#onLogin" text="Login" styleClass="auth-primary-button" />
            <Button onAction="#onRegister" text="Register" styleClass="auth-secondary-button" />
            <Button onAction="#onHome" text="Home" styleClass="auth-secondary-button" />
        </children>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </HBox>

</VBox>